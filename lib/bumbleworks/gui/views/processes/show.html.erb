<dl>
  <dt>Process ID</dt>
  <dd><%= @process.id %></dd>

  <dt>Trackers</dt>
  <dd>
    <ul>
      <% @process.trackers.each do |tracker| %>
        <li><a href="<%= @request.script_name %>/trackers/<%= tracker.id %>"><%= tracker.id %></a></li>
      <% end %>
    </ul>
  </dd>

  <dt>Leaves</dt>
  <dd>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Expression</th>
          <th>Error</th>
        </tr>
      </thead>
      <tbody>
        <% @process.leaves.each do |l| %>
          <tr>
            <td><a href="<%= @request.script_name %>/processes/<%= @process.id %>/expressions/<%= l.fei.expid %>"><%= l.fei.expid %></a></td>
            <td><%= l.tree %></td>
            <td><%= l.error.message if l.error %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </dd>
</dl>